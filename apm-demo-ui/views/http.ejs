<% layout('layout/_layout') -%>
<h3 style="text-align: center">Http请求</h3>
<p style="text-align: center">（ 可利用此功能生成拓扑图 ）</p>
<br/><br/>
<div>
    <form class="form-horizontal" role="form" action="/api/http/get" method="get">
        <div class="row">
            <div class="input-group col-md-8 col-md-offset-2">
                <div class="input-group-btn">
                    <button type="button" class="btn btn-default
                        dropdown-toggle" data-toggle="dropdown">Method
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="#">GET</a></li>
                    </ul>
                </div>
                <input type="text" class="form-control" name="url">
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-default" tabindex="-1"> 请求 </button>
                </div>
            </div>
        </div>
    </form>
</div>